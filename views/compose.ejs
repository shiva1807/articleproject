<%- include("header.ejs") %> 

<div class="container compositionSection">
    <h1>Article Composition</h1>
    <br>
    <br>
    <form action="compose" method="POST">
        <div class="form-group">
          <label>Headline</label>
          <input type="text" class="form-control newHeadline" name="headline">
        </div>
        <div class="form-group">
          <label>Article</label>
          <div>
            <textarea id="newArticle" name="articleContent" placeholder="Write Your Article Here." rows="10" cols="30"></textarea>
          </div>
        </div>

        
        <button type="submit" class="btn btn-primary">Publish</button>
      </form>

</div>

